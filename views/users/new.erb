
<h2>Sign up for free a Critique-It! account</h2>

<% if @sign_up_success_message %>
  <p class="sign_up_success_message">Your user id is: <%= @user %> and your password is <%= @password %>. Please <a href="/">sign in</a>. </p>

<% else %>
<form method="POST" action='/sign_up'>
  <label for="user_id">User ID: </label>&nbsp
  <input type="user_id" name="user_id" id="user_id" />
  <label for="user_email">Email Address: </label>&nbsp
  <input type="email" name="user_email" id="user_email" />
  </br>
  <label for="user_password">Password: </label>&nbsp
  <input type="password" name="user_password" id="user_password" />
  </br>
  <label for="profile_pic_url">profile pic url: </label>&nbsp
  <input type="profile_pic_url" name="profile_pic_url" id="profile_pic_url" />
</br>
  <input type="submit" value="submit" name="submit" />
</form>




<% end %>
