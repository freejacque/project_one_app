<h2>This is your feed!</h2>

<ol>
    <% @feed_posts.reverse.first(10).each_with_index do |post, index|
      user = @user
      pic_id = index
      %>

          <li>
            <a href="/each_post/<%= "#{user}" %><%= "#{pic_id}" %>" >
              <img src="<%= post["url"] %>" width="300px" >
            </a>
              </br>
              <p>Title: <%= post["title"].capitalize %></p>
              <p>Category: <%= post["category"].capitalize %></p>
              <p>Description: <%= post["description"] %></p>
              </br>
          </li>
    <% end %>
</ol>

<footer>
    <center>
      <% user = @user %>
      <form action="/home/<%= "#{user}" %>" method="GET">
        <input type="submit" value="Go to your Critique-It! Homepage">
      </form>
    </br>
    </br>
    </center>
</footer>
